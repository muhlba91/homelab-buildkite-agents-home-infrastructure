{
  "name": "@muhlba91/homelab-buildkite-agents-home-infrastructure",
  "version": "0.0.0",
  "description": "Homelab: Home Buildkite Agents - Infrastructure",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/muhlba91/homelab-buildkite-agents-home-infrastructure",
  "license": "MIT",
  "keywords": [
    "pulumi",
    "proxmox",
    "homelab",
    "buildkite"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "lint": "eslint src --ext .ts",
    "lint:gitlab": "eslint src --ext .ts --format gitlab",
    "watch:build": "tsc -p tsconfig.json -w",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@muhlba91/pulumi-proxmoxve": "^5.1.0",
    "@pulumi/gcp": "^6.57.0",
    "@pulumi/google-native": "^0.31.0",
    "@pulumi/pulumi": "^3.69.0",
    "@pulumi/random": "^4.13.2",
    "@pulumi/tls": "^4.10.0",
    "@pulumiverse/buildkite": "^2.0.0",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/nunjucks": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^5.0.8",
    "eslint-plugin-import": "^2.25.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "ts-node": "^10.4.0",
    "typedoc": "^0.24.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "build/main",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true
  }
}
